<div class="right_col conteudo_paginas" role="main">

    <!-- Titulo avaliação-->
    @{
        var listaIdeiasCount = Convert.ToInt32(ViewBag.QntCardsIdeiasAvaliadasFeedbacks);

        if (listaIdeiasCount == 0)
        {
            <h1 class="ideia_h1_nv1 ideia_visible_nv1">Você não possui ideias avaliadas concluídas</h1>
        }
        else
        {
            <h1 class="ideia_h1_nv1 ideia_visible_nv1">Essas são as ideias que você já recebeu feedbacks</h1>
        }

    }

    <br />
    <br />
    <br />

    <div class="row">
        @{ int j = 0;
            for (int i = 1; i <= listaIdeiasCount; i++)
            {
                <div class="col-md-4 col-sm-6  widget_tally_box">

                    <div class="x_panel">
                                <div class="x_title">
                                    <span>Nome ideia:</span>
                                    <h2 style="font-weight: bold;">@ViewBag.InfoCardsIdeiasAvaliadasFeedbacks.Data[j].NOME_IDEIA</h2>
                                    <span>Média nota:</span>
                                    <h2 style="font-weight: bold;">@ViewBag.MediaPontuacaoFeedbacks.Data[i - 1].MEDIA</h2>
                                    <span>Feedbacks recebidos: </span>
                                    <h2 style="font-weight: bold;" id="id_quantidade_feedbacks_@ViewBag.InfoCardsIdeiasAvaliadasFeedbacks.Data[j].ID">@ViewBag.MediaPontuacaoFeedbacks.Data[i - 1].QTD_FEEDBACKS</h2>

                                    <ul class="nav navbar-right panel_toolbox">
                                        <li class="dropdown" style="opacity:0; cursor:default !important;">
                                            <a href="#" class="dropdown-toggle" style="opacity:0; cursor:default !important;" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                                <a class="dropdown-item" href="#">Settings 1</a>
                                                <a class="dropdown-item" href="#">Settings 2</a>
                                            </div>
                                        </li>

                                        <li>
                                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                        </li>
                                    </ul>
                                    <div class="clearfix"></div>
                                </div>

                        <div class="x_content conteudo_cad">
                            <div id="graph_bar_feedback_@ViewBag.InfoCardsIdeiasAvaliadasFeedbacks.Data[j].ID" style="width:100%; height:200px;"></div>
                        </div>

                        <div class="btn_proxima_avaliacao">
                            <a href="/Avaliacao/IdeiaFeedbacks/?idIdeia=@ViewBag.InfoCardsIdeiasAvaliadasFeedbacks.Data[j].IDHASH"
                               class="btn btn-light btn-ideias btn-saiba-mais"
                               title="Saiba mais"
                               name="saibamais">
                                SAIBA MAIS
                            </a>
                        </div>
                    </div>
                </div>

                j = j + 5;
            }
        }
    </div>

    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
