<div class="right_col conteudo_paginas" role="main">

    <div class="x_panel"  style="width:100% !important;">
        <div class="x_content">
            <ul class="nav nav-tabs bar_tabs" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active titulo-aba" id="ideias-avaliadas-tab" data-toggle="tab" href="#ideias-avaliadas" role="tab" aria-controls="ideias-avaliadas" aria-selected="false">Ideias avaliadas</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link titulo-aba" id="avaliar-ideia-tab" data-toggle="tab" href="#avaliar-ideia" role="tab" aria-controls="avaliar-ideia" aria-selected="true">Avaliar ideia</a>
                </li>
            </ul>

            <div class="tab-content" id="myTabContent">
                <!-- Tab Ideias Avaliadas -->
                <div class="tab-pane fade show active" id="ideias-avaliadas" role="tabpanel" aria-labelledby="ideias-avaliadas-tab">
                    @{
                        var listaIdeiasAvaliadasCount = Convert.ToInt32(ViewBag.QntCardsIdeiasAvaliadas);

                        if (listaIdeiasAvaliadasCount == 0)
                        {
                            <h1 class="ideia_h1_nv1 ideia_visible_nv1">Você não possui ideias avaliadas concluídas</h1>
                        }
                        else
                        {
                            <h1 class="ideia_h1_nv1 ideia_visible_nv1">Essas são as notas das ideias que você já avaliou</h1>
                        }

                    }

                    <br />
                    <br />
                    <br />

                    <div class="row">
                        @{ int j = 0;
                            for (int i = 1; i <= listaIdeiasAvaliadasCount; i++)
                            {
                                <div class="col-md-4 col-sm-6 widget_tally_box">

                                    <div class="x_panel" >
                                        <div class="x_title">
                                            <span>Nome ideia:</span>
                                            <h2 style="font-weight: bold;">@ViewBag.InfoCardsIdeiasAvaliadas.Data[j].NOME_IDEIA</h2>
                                            <span>Média nota:</span>
                                            <h2 style="font-weight: bold;">@ViewBag.MediaPontuacao.Data[i - 1].MEDIA</h2>

                                            <ul class="nav navbar-right panel_toolbox">
                                                <li class="dropdown" style="opacity:0; cursor:default !important;">
                                                    <a href="#" class="dropdown-toggle" style="opacity:0; cursor:default !important;" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                                        <a class="dropdown-item" href="#">Settings 1</a>
                                                        <a class="dropdown-item" href="#">Settings 2</a>
                                                    </div>
                                                </li>

                                                <li>
                                                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                                </li>
                                            </ul>
                                            <div class="clearfix"></div>
                                        </div>

                                        <div class="x_content conteudo_cad">
                                            <div id="graph_bar_@ViewBag.InfoCardsIdeiasAvaliadas.Data[j].ID" style="width:100%; height:200px;"></div>
                                        </div>
                                    </div>
                                </div>

                                j = j + 5;
                            }
                        }
                    </div>

                </div>

                <!-- Tab Avaliar Ideias -->
                <div class="tab-pane fade" id="avaliar-ideia" role="tabpanel" aria-labelledby="avaliar-ideia-tab">
                    @{
                        var listaIdeiasCount = ViewBag.ListaIdeias.Data.Count;

                        if (listaIdeiasCount == 0)
                        {
                            <h1 class="ideia_h1_nv1 ideia_visible_nv1">Você não possui ideias para avaliar</h1>
                        }
                        else
                        {
                            <h1 class="ideia_h1_nv1 ideia_visible_nv1">Essas são as ideais que você precisa avaliar</h1>
                        }

                    }

                    <div>
                        <div class="tab_list_avaliar_ideia">
                            <!-- Table -->
                            <div class="table-result mt-4 pb-3">
                                <div class="table-responsive">
                                    <table id="table_avaliar_ideia" class="table table-sm table-hover table-striped">
                                        <thead>
                                            <tr>
                                                <th scope="col">Tipo de ideia</th>
                                                <th scope="col" class="tam_auto">Nome ideia</th>                                                
                                                <th class="tam_120">&nbsp;</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in ViewBag.ListaIdeias.Data)
                                            {
                                                string caminhoImagem = "/images/icon_pages.png";
                                               
                                                <tr>
                                                    <td><img src=@caminhoImagem title="ideia" alt="ideia" style="width:40px;" /></td>
                                                    <td>@item.NOMEPROJETO</td>                                                    
                                                    <td>
                                                        <a href="/Avaliacao/Ideias/?idIdeia=@item.ID"
                                                           class="btn btn-light btn-ideias btn-ideia-selecionada"
                                                           data-valor="@item.ID"
                                                           name="projeto_@item.ID">
                                                            Clique para avaliar
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>                    
                </div>
            </div>
        </div>
    </div>

    <br />
    <br />
    <br />
    <br />
