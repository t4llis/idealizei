            <div class="title_left">
                <h3>Perfil do Usuário</h3>
            </div>
            
            <div class="title_right">
                <div class="col-md-5 col-sm-5  form-group pull-right top_search">
                    <div class="input-group">
                        <select id="pesquisarUser" class="form-control">
                            <option selected="selected" value="-1">Todos usuários</option>
                            @{ foreach (var item in ViewBag.ListUsuarios)
                                {
                                    <option value="@item.ID">@item.NOME</option>
                                }
                            }
                        </select>
                        <span class="input-group-btn">
                            <button class="btn btn-secondary" id="btn_pesquisarUser" type="button" style="color:#ffff;">Go!</button>
                        </span>
                    </div>
                </div>
            </div>

        </div>
