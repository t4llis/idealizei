                            <div class="" role="tabpanel" data-example-id="togglable-tabs">
                                <ul id="myTab" class="nav nav-tabs bar_tabs" role="tablist">

                                    <li role="presentation" class="alinhar-img-loading active">

                                        <a href="#tab_content1" id="home-tab" role="tab" data-toggle="tab" aria-expanded="true" style="display:flex;">
                                            <span>Ideias cocriadas</span>
                                            <img id="img_loading_pergunta_page1" class="loading-perfil-user" src="~/images/icon_loading.gif" />
                                            <i class="fa fa-question-circle" style="margin-left:5px;" title="Lista todas as cocriações realizadas"></i>
                                        </a>


                                    </li>

                                    <li role="presentation" class="alinhar-img-loading">

                                        <a href="#tab_content2" role="tab" id="profile-tab" data-toggle="tab" aria-expanded="false" style="display:flex;">
                                            <span>Projetos envolvidos</span>
                                            <img id="img_loading_pergunta_page2" class="loading-perfil-user" src="~/images/icon_loading.gif" />
                                            <i class="fa fa-question-circle" style="margin-left:5px;" title="Lista todos os projetos em que você está envolvido"></i>
                                        </a>

                                    </li>

                                    <li role="presentation" class="alinhar-img-loading">

                                        <a href="#tab_content3" role="tab" id="tags-tab" data-toggle="tab" aria-expanded="false" style="display:flex;">
                                            <span>Cadastrar Tags</span>
                                            <img id="img_loading_pergunta_page3" class="loading-perfil-user" src="~/images/icon_loading.gif" />
                                            <i class="fa fa-question-circle" style="margin-left:5px;" title="Aqui você pode cadastrar tags"></i>
                                        </a>

                                    </li>

                                    <li role="presentation" class="alinhar-img-loading">

                                        <a href="#tab_content4" role="tab" id="equipes-tab" data-toggle="tab" aria-expanded="false" style="display:flex;">
                                            <span>Cadastrar Equipes</span>
                                            <img id="img_loading_pergunta_page4" class="loading-perfil-user" src="~/images/icon_loading.gif" />
                                            <i class="fa fa-question-circle" style="margin-left:5px;" title="Aqui você pode cadastrar equipes"></i>
                                        </a>

                                    </li>

                                    <li role="presentation" class="alinhar-img-loading">

                                        <a href="#tab_content5" role="tab" id="links-tab" data-toggle="tab" aria-expanded="false" style="display:flex;">
                                            <span>Links de convite</span>
                                            <img id="img_loading_pergunta_page5" class="loading-perfil-user" src="~/images/icon_loading.gif" />
                                            <i class="fa fa-question-circle" style="margin-left:5px;" title="Aqui você pode gerar links de convite"></i>
                                        </a>

                                    </li>

                                </ul>

                                <div id="myTabContent" class="tab-content">

                                    <div role="tabpanel" class="tab-pane active " id="tab_content1" aria-labelledby="home-tab">

                                        <ul class="messages" id="respostas_cocriacao">
                                        </ul>

                                    </div>

                                    <div role="tabpanel" class="tab-pane fade" id="tab_content2" aria-labelledby="profile-tab">

                                        <table class="data table table-striped no-margin">

                                            <thead>
                                                <tr>
                                                    <th>#</th>
                                                    <th>Nome Ideia</th>
                                                    <th>Lider</th>
                                                </tr>
                                            </thead>

                                            <tbody id="IdeiasEnvolvidas">
                                            </tbody>

                                        </table>

                                    </div>

                                    <div role="tabpanel" class="tab-pane" id="tab_content3" aria-labelledby="tags-tab">
                                        <div class="row">

                                            <div class="col col-md-3">
                                            </div>

                                            <div class="col col-md-6">
                                                <form>
                                                    <span>Informe as tags:</span>
                                                    <select id="tagsAdm" multiple>
                                                        @{ foreach (var item in ViewBag.ListTags)
                                                            {
                                                                if (item.ATIVO == "S")
                                                                {
                                                                    <option value="@item.ID" selected>@item.DESCRICAO</option>
                                                                }
                                                                else
                                                                {
                                                                    <option value="@item.ID">@item.DESCRICAO</option>
                                                                }
                                                            }
                                                        }
                                                    </select>

                                                    <br />
                                                    <br />
                                                    <br />
                                                    <button type="button" class="btn btn-primary" id="btnSalvarTags" title="Salvar Tags"> Salvar tags</button>

                                                </form>
                                            </div>



                                            <div class="col col-md-3">
                                            </div>

                                        </div>


                                    </div>

                                    <div role="tabpanel" class="tab-pane" id="tab_content4" aria-labelledby="equipes-tab">

                                        <div class="row">

                                            <div class="col col-md-3">
                                            </div>

                                            <div class="col col-md-6">

                                                <form>
                                                    <div class="form-group">
                                                        <label for="formGroupExampleInput">Nome equipe:</label>
                                                        <input type="text" class="form-control" id="nomeEquipe" placeholder="informe o nome da equipe">
                                                    </div>
                                                    <div class="form-group">
                                                        <span>Selecione os integrantes:</span>
                                                        <select id="integrantesEquipe" multiple>
                                                            @{ foreach (var item in ViewBag.ListUsuarios)
                                                                {
                                                                    <option value="@item.ID">@item.NOME</option>

                                                                }
                                                            }
                                                        </select>
                                                    </div>

                                                    <br />
                                                    <br />
                                                    <br />

                                                    <div class="row">
                                                        <div class="col col-md-12">
                                                            <button type="button" class="btn btn-primary" id="btnSalvarEquipes" title="Salvar Equipe">Criar Equipe</button>
                                                            <button type="button" class="btn btn-secondary" id="btnCancelarEdit" title="Cancelar">Cancelar</button>
                                                        </div>
                                                    </div>

                                                </form>

                                            </div>



                                            <div class="col col-md-3">
                                            </div>

                                        </div>

                                        <br />
                                        <br />
                                        <br />
                                        <br />
                                        <br />
                                        <br />
                                        <div class="row">
                                            <div class="col col-md-1"></div>

                                            <div class="col col-md-10">
                                                <table class="data table table-striped no-margin">

                                                    <thead>
                                                        <tr>
                                                            <th>#</th>
                                                            <th>Nome Equipe</th>
                                                            <th>Integrantes</th>
                                                            <th style="text-align:center;" colspan="1">ações</th>
                                                        </tr>
                                                    </thead>

                                                    <tbody id="EquipesCriadas">
                                                    </tbody>
                                                </table>
                                            </div>

                                            <div class="col col-md-1"></div>
                                        </div>
                                    </div>

                                    <div role="tabpanel" class="tab-pane" id="tab_content5" aria-labelledby="equipes-tab">

                                        <div class="row">

                                            <div class="col col-md-12">
                                                
                                                <table class="data table table-striped no-margin">

                                                    <thead>
                                                        <tr>
                                                            <th>Link</th>
                                                        </tr>
                                                    </thead>

                                                    <tbody id="LinksConvites">
                                                    </tbody>

                                                </table>

                                            </div>

                                        </div>

                                        <br />
                                        <br />

                                        <div class="row">

                                            <div class="col col-md-9 col-sm-9">
                                            </div>
                                            <div class="col col-md-3 col-sm-9">
                                                <button type="button" class="btn btn-primary" id="btnGerarLinkConvite" title="Salvar Equipe">Gerar link de convite</button>
                                            </div>

                                        </div>

                                </div>
                            </div>
                        </div>



                    </div>
                </div>
            </div>
        </div>
    </div>

